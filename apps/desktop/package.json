{
  "name": "@pg-studio/desktop",
  "version": "1.0.0",
  "description": "Desktop application for PostgreSQL schema visualization",
  "author": "PG Studio Team",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & electron .",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.pgstudio.app",
    "productName": "PG Studio",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../ui/dist",
        "to": "ui",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "icon.png"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PG Studio",
      "perMachine": false
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "28.0.0",
    "typescript": "^5.0.4"
  }
}